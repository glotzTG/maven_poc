<settings
        xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd"
        xmlns="http://maven.apache.org/SETTINGS/1.1.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <servers>
        <server>
            <id>maven-poc-release</id>
            <username>glotzTG</username>
            <password>${env.GITHUB_RELEASE_REPO_TOKEN}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>maven-poc-release</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <id>maven-poc-release</id>
                    <url>${env.GITHUB_RELEASE_REPO_URL}</url>
                </repository>
            </repositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>maven-poc-release</activeProfile>
    </activeProfiles>
</settings>